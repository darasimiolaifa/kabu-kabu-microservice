datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:holiness86@localhost:5432/kabu_kabu_driver"
}

generator photon {
  provider = "photonjs"
}

model Driver {
  id    String  @default(cuid()) @id @unique
  email String  @unique
  firstName  String
  lastName  String
  status  String
  phone_number  String
  drivers_license String
  taxi Taxi[]
  trips Int @default(0)
  createdAt DateTime
  updatedAt DateTime?
}

model Taxi {
  id  String  @default(cuid())  @id @unique
  manufacturer  String
  car_model String
  capacity  Int
  year  String
  color String
  plate_number String
  vehicle_picture String
  vehicle_documents String[]
  ownership_documents String[]
  createdAt DateTime
  updatedAt DateTime?
}